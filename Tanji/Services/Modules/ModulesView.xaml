<UserControl x:Class="Tanji.Services.Modules.ModulesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tanji.Services.Modules"
             xmlns:ctrls="clr-namespace:Tanji.Controls"
             mc:Ignorable="d">
    <UserControl.DataContext>
        <local:ModulesViewModel/>
    </UserControl.DataContext>
    <Grid Width="478" Height="318">
        <ListView SelectedItem="{Binding SelectedModule}" ItemsSource="{Binding Modules}" BorderThickness="0" Margin="0,0,0,25"/>
        <ctrls:LabelBox Height="20" Margin="50,298,250,0" Title="Remote Module Port" Text="{Binding RemoteModulePort, Mode=OneTime}" IsReadOnly="True"/>
        <Button Width="100" Height="20" Margin="273,298,105,0" Content="Uninstall" Command="{Binding UninstallCommand}"/>
        <Button Width="100" Height="20" Margin="378,298,0,0" Content="Install" Command="{Binding InstallCommand}"/>
    </Grid>
</UserControl>