                            Value="{DynamicResource TJRightTabItem}"/>
                </Trigger>
                <Trigger Property="TabStripPlacement" Value="Bottom">
                    <Setter Property="ItemContainerStyle"
                            Value="{DynamicResource TJBottomTabItem}"/>
